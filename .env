# === Production deployment defaults ===
# Update every value before running in production.

# Runtime environment
NODE_ENV=production
APP_ENV=production
PORT=3000

# Domain + SSL (used by Caddy)
YOUR_DOMAIN=example.com
YOUR_EMAIL=admin@example.com

# NextAuth / Next.js
NEXTAUTH_URL=https://example.com
NEXTAUTH_SECRET=change_me_to_random_64_chars
NEXT_PUBLIC_BASE_URL=https://example.com

# Database connectivity (internal Docker network)
POSTGRES_USER=hc_user
POSTGRES_PASSWORD=hc_pass
POSTGRES_DB=hc_prod
DATABASE_URL=postgresql://hc_user:hc_pass@db:5432/hc_prod?pgbouncer=true&connection_limit=5
#DATABASE_URL=postgresql://hc_user:hc_pass@db:5432/hc_prod?sslmode=require&pgbouncer=true&connection_limit=5

# Backups
BACKUP_SCHEDULE=@daily

# Optional Prisma tuning
#PRISMA_LOG=error
#SHADOW_DATABASE_URL=postgresql://hc_user:hc_pass@db:5432/hc_prod_shadow
